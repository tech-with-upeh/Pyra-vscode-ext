{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Helios",
	"patterns": [
		{
  "name": "variable.other.assignment.ink",
  "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b(?=\\s*=)"
},
		{
      "name": "constant.numeric.ink",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    {
      "name": "variable.language.ink",
      "match": "\\b(window|app|page|view|text|img)\\b"
    },
		{
      "name": "comment.line.number-sign.ink",
      "match": "#.*$"
    },
	{
  "name": "comment.block.ink",
  "begin": "/\\*",
  "end": "\\*/"
},
{
  "name": "variable.other.readwrite.ink",
  "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b(?!\\s*=)"
},
		{ "include": "#keywords" },
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ink",
				"match": "\\b(if|while|for|return|print)\\b"
			}]
		},
		"strings": {
  "name": "string.quoted.ink",
  "begin": "(['\"])",
  "beginCaptures": {
    "1": { "name": "punctuation.definition.string.begin.ink" }
  },
  "end": "\\1",
  "endCaptures": {
    "1": { "name": "punctuation.definition.string.end.ink" }
  },
  "patterns": [
    {
      "name": "constant.character.escape.ink",
      "match": "\\\\."
    }
  ]
}
	},
	"scopeName": "source.ink"
}