{
  "name": "pyra-lang",
  "displayName": "Pyra Lang",
  "description": "for full stack framewotk built in c++",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [ 
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyra-lang.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [{
      "id": "pyx",
      "aliases": ["Pyra", "pyx"],
      "extensions": [".pyx"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "pyx",
      "scopeName": "source.pyx",
      "path": "./syntaxes/pyx.tmLanguage.json"
    }],
    "snippets": [
    {
      "language": "pyx",
      "path": "./snippets/pyx.code-snippets.json"
    }
  ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
