{
  "name": "Helios-lang",
  "displayName": "Helios Lang",
  "description": "for full stack framewotk built in c++",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Helios-lang.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "Helios-lang.build",
        "title": "Helios build"
      },
      {
        "command": "Helios-lang.run",
        "title": "Helios run"
      },
      {
        "command": "Helios-lang.dev",
        "title": "Helios dev"
      },
      {
        "command": "Helios-lang.createproject",
        "title": "Helios createproject"
      },
      {
        "command": "Helios-lang.run.t",
        "title": "Helios Run Target"
      },
      {
        "command": "Helios-lang.dev.t",
        "title": "Helios Dev Target"
      },
      {
        "command": "Helios-lang.build.t",
        "title": "Helios Build Target"
      }
    ],
    "languages": [
      {
        "id": "ink",
        "aliases": [
          "Helios",
          "ink"
        ],
        "extensions": [
          ".ink"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ink",
        "scopeName": "source.ink",
        "path": "./syntaxes/ink.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ink",
        "path": "./snippets/ink.code-snippets.json"
      }
    ],
    "iconThemes": [
    {
      "id": "helios-icon",
      "label": "Helios Custom Icon Theme",
      "path": "./fileicons/helios-icon-theme.json"
    }
  ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vscode": "^1.1.37"
  }
}
